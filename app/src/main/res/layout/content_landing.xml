<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cos333.project_corgis.LandingActivity"
    tools:showIn="@layout/activity_landing"
    android:background="@color/bg_gray">

    <!--TODO: Use pictures instead of buttons?-->
    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="match_parent">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_weight="1"
            android:onClick="startDrinkActivity"
            android:id="@+id/new_night"
            android:src="@drawable/start_night_2"
            android:contentDescription="@string/start_new_night"
            android:background="@drawable/rounded_new" />

    </TableRow>

    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="match_parent">

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="0sp"
            android:layout_height="150sp"
            android:layout_weight="1"
            android:id="@+id/stats"
            android:textSize="20sp"
            android:onClick="openStats"
            android:background="@drawable/rounded_new"
            android:layout_column="0"
            android:src="@drawable/stats_icon" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <ImageButton
            android:layout_width="0sp"
            android:layout_height="150sp"
            android:layout_weight="1"
            android:id="@+id/chats"
            android:textSize="20sp"
            android:onClick="startChatActivity"
            android:background="@drawable/rounded_new"
            android:layout_column="1"
            android:src="@drawable/chat_icon" />
    </TableRow>


</TableLayout>