<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cos333.project_corgis.LandingActivity"
    tools:showIn="@layout/activity_landing">

    <!--TODO: Use pictures instead of buttons?-->
    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="match_parent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_weight="1"
            android:onClick="startDrinkActivity"
            android:text="@string/new_night"
            android:id="@+id/new_night"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="match_parent">
        <Button
            android:layout_width="0sp"
            android:layout_height="150sp"
            android:layout_weight="1"
            android:text="@string/stats"
            android:id="@+id/stats"
            android:textSize="20sp"
            android:onClick="openStats" />

        <Button
            android:layout_width="0sp"
            android:layout_height="150sp"
            android:layout_weight="1"
            android:text="@string/chats"
            android:id="@+id/chats"
            android:textSize="20sp"
            android:onClick="startChatActivity" />

    </TableRow>


</TableLayout>